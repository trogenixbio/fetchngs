process {
    withName: 'LOAD_USER_METADATA' {
        publishDir = [
            [
                path: { "${params.outdir}/internal/run_info/${params.pipeline_version}-${params.wf_timestamp}/metadata/json" },
                mode: params.publish_dir_mode,
                pattern: "metadata.json"
            ],
            [
                path: { "${params.outdir}/internal/run_info/${params.pipeline_version}-${params.wf_timestamp}/metadata/samplesheet" },
                mode: params.publish_dir_mode,
                pattern: "samplesheet.json"
            ]
        ]
    }
}
