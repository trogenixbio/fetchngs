process {
    withName: 'JSON_TO_SAMPLESHEET' {
        publishDir = [
            path: { "${params.outdir}/public/run_info/${params.pipeline_version}-${params.wf_timestamp}/metadata/samplesheet" },
            mode: params.publish_dir_mode,
            pattern: "*.csv"
        ]
    }
    withName: 'JSON_TO_SAMPLESHEET_INTERNAL' {
        publishDir = [
            path: { "${params.outdir}/internal/run_info/${params.pipeline_version}-${params.wf_timestamp}/metadata/samplesheet" },
            mode: params.publish_dir_mode,
            pattern: "*.csv"
        ]
    }
}
