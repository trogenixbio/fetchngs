process {
    withName: 'SRA_FASTQ_FTP' {
        ext.args = '-t 5 -nv -c -T 60'
        publishDir = [
            [
                path: { "${params.outdir}/${params.pub_internal}/${meta.study_accession}/${meta.library_strategy}/fastq" },
                mode: params.publish_dir_mode,
                pattern: "*.fastq.gz"
            ],
            [
                path: { "${params.outdir}/${params.pub_internal}/${meta.study_accession}/${meta.library_strategy}/fastq/md5" },
                mode: params.publish_dir_mode,
                pattern: "*.md5"
            ]
        ]
    }
    withName: 'SRA_FASTQ_FTP_INTERNAL' {
        ext.args = '-t 5 -nv -c -T 60'
        publishDir = [
            [
                path: { "${params.outdir}/${params.pub_internal}/${meta.study_accession}/${meta.library_strategy}/fastq" },
                mode: params.publish_dir_mode,
                pattern: "*.fastq.gz"
            ],
            [
                path: { "${params.outdir}/${params.pub_internal}/${meta.study_accession}/${meta.library_strategy}/fastq/md5" },
                mode: params.publish_dir_mode,
                pattern: "*.md5"
            ]
        ]
    }
}
